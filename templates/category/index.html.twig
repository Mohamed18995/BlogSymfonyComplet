{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
<style>
  ul{list-style-type: none;}
  h2{display: inline-block; font-size: 15px; margin-left: 15px; margin-top: 15px; border: 10px solid; color: white;}
</style>

<div class="example-wrapper">
      <h1> Catégories ✅</h1>
      <ul>
        {% for category in categories %}
          <a href="{{ path('afficher_category', { id: category.id } )}}">
            <h2>{{category.nom}}</h2>
          </a>
        {% endfor%}
      </ul>
        
    </div>
{% endblock %}
